{
  "getEndpoints": {
    "GET /api": {
      "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
      "description": "serves an array of all topics",
      "queries": [],
      "exampleResponse": {
        "topics": [{ "slug": "football", "description": "Footie!" }]
      }
    },
    "GET /api/articles": {
      "description": "serves an array of all articles",
      "queries": ["author", "topic", "sort_by", "order"],
      "exampleResponse": {
        "articles": [
          {
            "title": "Seafood substitutions are increasing",
            "topic": "cooking",
            "author": "weegembump",
            "body": "Text from the article..",
            "created_at": "2018-05-30T15:59:13.341Z",
            "votes": 0,
            "comment_count": 6
          }
        ]
      }
    },
    "GET /api/articles/:article_id": {
      "description": "serves an article chosen by its id",
      "queries": [],
      "exampleResponse": {
        "article": {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      }
    },
    "GET /api/articles/:article_id/comments": {
      "description": "serves an array of all comments for an article chosen by its id",
      "queries": [],
      "exampleResponse": {
        "comments": [
          {
            "comment_id": 11,
            "body": "Ambidextrous marsupial",
            "article_id": 3,
            "author": "icellusedkars",
            "votes": 0,
            "created_at": "2020-09-19T23:10:00.000Z"
          }
        ]
      }
    }
  },
  "postEndpoints": {
    "POST /api/articles/:article_id/comments": {
      "description": "posts a comment for an article chosen by its id and returns the newly posted article",
      "queries": [],
      "exampleInputFormat": {
        "username": "icellusedkars",
        "body": "Ambidextrous marsupial"
      },
      "exampleResponse": {
        "postedArticle": {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z"
        }
      }
    }
  },
  "patchEndpoints": {
    "PATCH /api/articles/:article_id": {
      "description": "updates the votes of an article chosen by its id by supplied increment or decrement value and returns the updated article",
      "queries": [],
      "exampleInputFormat": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "updatedArticle": {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 1,
          "created_at": "2020-09-19T23:10:00.000Z"
        }
      }
    }
  },
  "deleteEndpoints": {
    "DELETE /api/comments/:comment_id": {
      "description": "deletes the comment chosen by its id",
      "expectResponse": "Status: 204 and no content"
    }
  }
}
