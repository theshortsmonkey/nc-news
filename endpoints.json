{
  "getEndpoints": {
    "GET /api": {
      "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
      "description": "serves an array of all topics",
      "queries": [],
      "exampleResponse": {
        "topics": [{ "slug": "football", "description": "Footie!" }]
      }
    },
    "GET /api/articles": {
      "description": "serves an array of all articles, pagination defined by the limit and p queries",
      "queries": ["author", "topic", "sort_by", "order","limit","p (page)"],
      "exampleResponse": {
        "total_count": 10,
        "articles": [
          {
            "title": "Seafood substitutions are increasing",
            "topic": "cooking",
            "author": "weegembump",
            "body": "Text from the article..",
            "created_at": "2018-05-30T15:59:13.341Z",
            "votes": 0,
            "comment_count": 6
          }
        ]
      }
    },
    "GET /api/articles/:article_id": {
      "description": "serves an article chosen by its id",
      "queries": [],
      "exampleResponse": {
        "article": {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      }
    },
    "GET /api/articles/:article_id/comments": {
      "description": "serves an array of all comments for an article chosen by its id, pagination defined by the limit and p queries",
      "queries": ["limit","p (page)"],
      "exampleResponse": {
        "total_count": 11,
        "comments": [
          {
            "comment_id": 11,
            "body": "Ambidextrous marsupial",
            "article_id": 3,
            "author": "icellusedkars",
            "votes": 0,
            "created_at": "2020-09-19T23:10:00.000Z"
          }
        ]
      }
    },
    "GET /api/users": {
      "description": "serves an array of all users",
      "queries": [],
      "exampleResponse": {
        "users": [
          {
            "username": "butter_bridge",
            "name": "jonny",
            "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
          }
        ]
      }
    },
    "GET /api/users/:username": {
      "description": "serves a user chosen by their username",
      "queries": [],
      "exampleResponse": {
        "user": {
          "username": "butter_bridge",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg",
          "name": "jonny"
        }
      }
    }
  },
  "postEndpoints": {
    "POST /api/articles/:article_id/comments": {
      "description": "posts a comment for an article chosen by its id and returns the newly posted comment",
      "queries": [],
      "exampleInputFormat": {
        "username": "icellusedkars",
        "body": "Ambidextrous marsupial"
      },
      "exampleResponse": {
        "postedComment": {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z"
        }
      }
    },
    "POST /api/articles": {
      "description": "post a supplied article",
      "queries": [],
      "exampleInputFormat": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "article_img_url": "https://whos.image.com/image.jpg"
      },
      "exampleResponse": {
        "postedArticle": {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "article_img_url": "https://whos.image.com/image.jpg",
          "article_id": 10,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "comment_count": 0
        }
      }
    },
    "POST /api/topics": {
      "description": "post a supplied article",
      "queries": [],
      "exampleInputFormat": {
        "slug": "dogs",
        "description": "everyone needs to talk about dogs"
      },
      "exampleResponse": {
        "postedTopic": {
          "slug": "dogs",
          "description": "everyone needs to talk about dogs"
        }
      }
    }
  },
  "patchEndpoints": {
    "PATCH /api/articles/:article_id": {
      "description": "updates the votes of an article chosen by its id by supplied increment or decrement value and returns the updated article",
      "queries": [],
      "exampleInputFormat": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "updatedArticle": {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 1,
          "created_at": "2020-09-19T23:10:00.000Z"
        }
      }
    },
    "PATCH /api/comments/:comment_id": {
      "description": "updates the votes of a comment chosen by its id by supplied increment or decrement value and returns the updated comment",
      "queries": [],
      "exampleInputFormat": {
        "inc_votes": 1
      },
      "exampleResponse": {
        "updatedComment": {
          "comment_id": 1,
          "body": "Oh, I've got compassion running out of my nose, pal! I'm the Sultan of Sentiment!",
          "article_id": 9,
          "author": "butter_bridge",
          "votes": 20,
          "created_at": "2020-04-06T12:17:00.000Z"
        }
      }
    }
  },
  "deleteEndpoints": {
    "DELETE /api/comments/:comment_id": {
      "description": "deletes the comment chosen by its id",
      "expectResponse": "Status: 204 and no content"
    },
    "DELETE /api/articles/:article_id": {
      "description": "deletes the article and it's associated comments chosen by its id",
      "expectResponse": "Status: 204 and no content"
    }
  }
}
